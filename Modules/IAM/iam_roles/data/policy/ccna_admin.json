{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DisableCloudtrailTamplering",
      "Action": [
        "cloudtrail:Remove*",
        "cloudtrail:Delete*",
        "cloudtrail:Stop*",
        "cloudtrail:Update*"
      ],
      "Effect": "Deny",
      "Resource": "*"
    },
    {
      "Sid": "DenyEC2Tagging",
      "Effect": "Deny",
      "Action": [
        "ec2:CreateTags",
        "ec2:DeleteTags"
      ],
      "Resource": "arn:aws:ec2:::*"
    },
    {
      "Sid": "AllowEC2BasedOnTag",
      "Effect": "Allow",
      "Action": "ec2:*",
      "Resource": "arn:aws:ec2:::*",
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/ApplicationCode": "${application_code}"
        }
      }
    },
    {
      "Sid": "DenyRDSTagging",
      "Effect": "Deny",
      "Action": [
        "rds:AddTagsToResource",
        "rds:RemoveTagsFromResource"
      ],
      "Resource": "arn:aws:rds:*"
    },
    {
      "Sid": "AllowRDSByAppTag",
      "Effect": "Allow",
      "Action": "rds:*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "rds:db-tag/ApplicationCode": "${application_code}"
        }
      }
    },
    {
      "Sid": "AllowCloudWatch",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:DescribeAlarmHistory",
        "cloudwatch:DescribeAlarms",
        "cloudwatch:DescribeAlarmsForMetric",
        "cloudwatch:GetMetricData",
        "cloudwatch:GetMetricStatistics",
        "cloudwatch:ListMetrics",
        "ec2:GetConsoleOutput"
      ],
      "Resource": [ "*" ]
    },
    {
      "Sid": "DenyS3Manipulation",
      "Effect": "Deny",
      "Action": [
        "s3:CreateBucket",
        "s3:PutBucketAcl",
        "s3:PutBucketPolicy",
        "s3:CreateBucket",
        "s3:DeleteBucket",
        "s3:DeleteBucketPolicy"
      ],
      "Resource": "arn:aws:s3:::${bucket}*/*"
    },
    {
      "Sid": "AllowS3Operations",
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": "arn:aws:s3:::${bucket}*/*"
    }
  ]
}
