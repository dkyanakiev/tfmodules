{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DisableCloudtrailTamplering",
      "Action": [
        "cloudtrail:Remove*",
        "cloudtrail:Delete*",
        "cloudtrail:Stop*",
        "cloudtrail:Update*"
      ],
      "Effect": "Deny",
      "Resource": "*"
    },
    {
      "Sid": "AllowListBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource":"arn:aws:s3:::${bucket}"
    },
    {
      "Sid": "AllowBucketOperations",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::${bucket}*/*"
    }
  ]
}
