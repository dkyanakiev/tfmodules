{
  "Version": "2012-10-17",
  "Statement": [{
    "Sid": "",
    "Action": "sts:AssumeRole",
    "Effect": "Allow",
    "Principal": {
      "Service": "ec2.amazonaws.com"
    }
  }, {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::${account_id}:saml-provider/ko.idp"
      },
      "Action": "sts:AssumeRoleWithSAML",
      "Condition": {
        "StringEquals": {
          "SAML:aud": "https://signin.aws.amazon.com/saml"
        }
      }
    }    
  ]
}
